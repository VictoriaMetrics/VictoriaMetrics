groups:
  - name: groupTest
    interval: 1h
    ## eval_offset shouldn't be greater than interval
    eval_offset: 65m
    rules:
      - alert: VMRows
        for: 2s
        expr: sum(rate(vm_http_request_errors_total[2s])) > 0
        labels:
          label: bar
          host: "{{ $labels.instance }}"
        annotations:
          summary: "{{ $value }}"
